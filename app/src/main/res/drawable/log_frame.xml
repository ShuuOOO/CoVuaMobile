<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền hơi trong suốt trắng -->
    <solid android:color="#99FFFFFF"/>
    <!-- Viền xám mỏng -->
    <stroke
        android:width="1dp"
        android:color="#88000000"/>
    <!-- Bo góc nhẹ -->
    <corners android:radius="8dp"/>
    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
